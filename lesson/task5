def r(n):
    s = bin(n)[2:]
    if n % 2 == 0:
        s = s.replace ('1', '11')
    else:
        s = s.replace ('0', '00')
    return int(s, 2)

print(min(n for n in range(1, 10000) if r(n) > 70))
--------------
Вариант 7 из книжки
-------------
def zap(x, base):
    s = ''
    while x > 0:
        s = str(x % base) + s
        x //= base
    return s


def r(n):
    s = zap(n, 4)
    if n % 4 == 0:
        s += s[-2:]
    else:
        s += zap((n % 4) * 2, 4)
    return int(s, 4)

for n in range (1, 2000):
    if r(n) >= 1025:
        print(n)
        break
