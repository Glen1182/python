for n in range (100, 10000):
    a = int(str(n)[0]) + int(str(n)[1])
    b = int(str(n)[1]) + int(str(n)[2])
    mx = max (a, b)
    mn = min (a, b)
    r = str(mx) + str(mn)
    if r == '159':
        print(n)
